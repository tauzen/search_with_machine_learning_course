# This example requires the bbuy_queries index to exist and be populated.  See index-data.sh for details.
# Get the top 10 queries from the queries log
GET /bbuy_queries/_search
{
  "size": 0,
  "aggs": {
    "Query": {

      "terms": {
        "size": 10,
        "field": "query.keyword"
      },
      "aggs":{
        "Docs":{
          "terms":{
            "size": 5,
            "field": "sku.keyword"
          }
        }
      }
    }
  }
}


# Create the Search Template
POST _scripts/hello_world_template
{
  "script": {
    "lang": "mustache",
    "source": {
      "size": "10",
      "_source": ["sku", "name", "shortDescription"],
      "query": {
        "function_score": {
          "query": {
            "bool": {
              "must": [
              ],
              "should": [
                {
                  "match": {
                    "name": {
                      "query": "{{user_query}}",
                      "fuzziness": "1",
                      "prefix_length": 2,
                      "boost": 0.01
                    }
                  }
                },
                {
                  "match_phrase": {
                    "name.hyphens": {
                      "query": "{{user_query}}",
                      "slop": 1,
                      "boost": 50
                    }
                  }
                },
                {
                  "multi_match": {
                    "query": "{{user_query}}",
                    "type": "phrase",
                    "slop": "6",
                    "minimum_should_match": "2<75%",
                    "fields": [
                      "name^10",
                      "name.hyphens^10",
                      "shortDescription^5",
                      "longDescription^5",
                      "department^0.5",
                      "sku",
                      "manufacturer",
                      "features",
                      "categoryPath"
                    ]
                  }
                },
                {
                  "terms": {
                    "sku": ["\"{{#user_query_split}}\",\"{{/user_query_split}}\""],
                    "boost": 50.0
                  }
                },
                {
                  "match": {
                    "name.hyphens": {
                      "query": "{{user_query}}",
                      "operator": "OR",
                      "minimum_should_match": "2<75%"
                    }
                  }
                }
              ],
              "minimum_should_match": 1
            }
          },
          "boost_mode": "multiply",
          "score_mode": "sum",
          "functions": [
            {
              "filter": {
                "exists": {
                  "field": "salesRankShortTerm"
                }
              },
              "gauss": {
                "salesRankShortTerm": {
                  "origin": "1.0",
                  "scale": "100"
                }
              }
            },
            {
              "filter": {
                "exists": {
                  "field": "salesRankMediumTerm"
                }
              },
              "gauss": {
                "salesRankMediumTerm": {
                  "origin": "1.0",
                  "scale": "1000"
                }
              }
            },
            {
              "filter": {
                "exists": {
                  "field": "salesRankLongTerm"
                }
              },
              "gauss": {
                "salesRankLongTerm": {
                  "origin": "1.0",
                  "scale": "1000"
                }
              }
            },
            {
              "script_score": {
                "script": "0.0001"
              }
            }
          ]
        }
      }
    }
  },
  "params": {
    "user_query": "",
    "user_query_split": []
  }
}

